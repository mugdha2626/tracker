{
  "manifest_version": 3,
  "name": "TrackWork",
  "version": "1.0.0",
  "description": "Track assignments, quizzes, and deadlines for your classes",

  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TrackWork",
    "default_icon": {
      "16": "assets/icons/icon.png",
      "32": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon.png",
    "32": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}